<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/background_color"

    android:foreground="?attr/selectableItemBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Blogtitle"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            android:text="Content Title"

            android:textColor="@color/purple"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileicon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profileicon"
            app:layout_constraintBottom_toBottomOf="@+id/profile_name"
            app:layout_constraintEnd_toStartOf="@+id/profile_name"
            app:layout_constraintStart_toEndOf="@+id/Blogtitle"
            app:layout_constraintTop_toTopOf="@+id/profile_name"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Profile name"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.764"
            app:layout_constraintStart_toEndOf="@+id/Blogtitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 24, 2025"
            android:textColor="@color/date_color"
            app:layout_constraintEnd_toEndOf="@+id/profile_name"
            app:layout_constraintStart_toStartOf="@+id/profileicon"
            app:layout_constraintTop_toBottomOf="@+id/profile_name" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/profile_name"
            app:layout_constraintStart_toStartOf="@+id/Blogtitle"
            app:layout_constraintTop_toBottomOf="@+id/Date"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:letterSpacing="0.03"
            android:lineHeight="20sp"
            android:maxLines="4"
            android:text="This is a sample blog content preview. It gives a brief overview of the blog post to entice readers to click and read more."
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/divider"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ReadMore"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button"
            android:text="Read More"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/Contents"
            app:layout_constraintTop_toBottomOf="@+id/Contents" />

        <TextView
            android:id="@+id/likesCount"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="20"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/likes"
            app:layout_constraintEnd_toStartOf="@+id/likes"
            app:layout_constraintTop_toTopOf="@+id/likes"
            app:layout_constraintVertical_bias="0.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/likes"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="55dp"
            android:src="@drawable/heart_black"
            app:layout_constraintBottom_toBottomOf="@+id/ReadMore"
            app:layout_constraintStart_toEndOf="@+id/ReadMore"
            app:layout_constraintTop_toTopOf="@+id/ReadMore"
            app:layout_constraintVertical_bias="0.647" />

        <TextView
            android:id="@+id/CommentsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="20"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/Comments"
            app:layout_constraintEnd_toStartOf="@+id/Comments"
            app:layout_constraintTop_toTopOf="@+id/Comments"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/Comments"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/comments"
            app:layout_constraintBottom_toBottomOf="@+id/likes"
            app:layout_constraintStart_toEndOf="@+id/likes"
            app:layout_constraintTop_toTopOf="@+id/likes"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Save"
            tools:ignore="MissingConstraints"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/save"
            app:layout_constraintBottom_toBottomOf="@+id/Comments"
            app:layout_constraintStart_toEndOf="@+id/CommentsCount"
            app:layout_constraintTop_toTopOf="@+id/Comments" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>